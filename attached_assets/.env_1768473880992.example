# ================================
# YouthSchool MVP - Environment Variables
# Docker Development Environment
# ================================

# ----- Application -----
APP_NAME=YouthSchool MVP
ENVIRONMENT=development
DEBUG=true

# ----- Database -----
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/youthschool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# ----- Redis Cache -----
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# ----- Claude AI -----
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
CLAUDE_MODEL=claude-sonnet-4-20250514
CLAUDE_MAX_TOKENS=4000
CLAUDE_TEMPERATURE=0.7

# ----- Vector Database (Qdrant for RAG) -----
VECTOR_DB_URL=http://qdrant:6333
VECTOR_DB_COLLECTION=youthschool_documents
VECTOR_DIMENSION=1536

# ----- Object Storage (MinIO for RAG) -----
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=youthschool-docs
MINIO_SECURE=false

# ----- File Upload -----
UPLOAD_DIR=/app/uploads
OUTPUT_DIR=/app/outputs
TEMPLATE_DIR=/app/templates
MAX_UPLOAD_SIZE=10485760

# ----- Security -----
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ----- CORS -----
CORS_ORIGINS=http://localhost:3000,http://localhost:80

# ----- Logging -----
LOG_LEVEL=DEBUG
LOG_FILE=/app/logs/app.log

# ----- RAG Settings -----
RAG_ENABLED=false  # Phase 2에서 활성화
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50
RAG_TOP_K=5
EMBEDDING_MODEL=text-embedding-3-small

# ----- Feature Flags -----
ENABLE_USER_UPLOAD=true
ENABLE_EXCEL_EXPORT=true
ENABLE_TEMPLATE_CACHE=true
ENABLE_RAG=false
